<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adonai.diary_browser"
    android:versionCode="020"
    android:versionName="Alpha-0.2.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" /><uses-permission android:name="android.permission.INTERNET" />
    
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AuthorizationForm"
            android:label="@string/title_activity_authorization_form" >
        </activity>
        <activity
            android:name=".DiaryList"
            android:label="@string/title_activity_diary_list" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageViewer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="adonai.diary_browser.DiaryList" />
        </activity>
        <activity android:name=".MessageSender"></activity>
        <activity android:name=".preferences.PreferencesScreen"></activity>
    </application>

</manifest>