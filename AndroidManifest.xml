<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adonai.diary_browser"
    android:versionCode="001"
    android:versionName="Alpha-0.0.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AuthorizationForm"
            android:label="@string/title_activity_authorization_form" >
        </activity>
        <activity
            android:name=".DiaryList"
            android:label="@string/title_activity_diary_list" >
        </activity>
        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>