<resources>
    <style name="DiaryTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/DiaryTheme.ActionBar</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Classic" parent="android:Theme.Light">
        <item name="android:textColor">@color/diary_divider</item>
        <item name="android:checkboxStyle">@style/Classic.CheckBoxStyle</item>
    </style>

    <style name="Classic.CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/diary_divider</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/abc_ic_menu_moreoverflow_normal_holo_dark</item>
    </style>

    <style name="DiaryTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/top_gradient</item>
        <item name="backgroundStacked">@drawable/top_gradient</item>
        <item name="backgroundSplit">@drawable/top_gradient</item>
        <item name="titleTextStyle">@style/DiaryTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="DiaryTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DiaryTheme.ActionBar.MenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>