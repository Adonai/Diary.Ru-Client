<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="adonai.diary_browser"
    android:versionCode="174"
    android:versionName="1.7.4" android:installLocation="auto">

    <uses-sdk tools:node="replace" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DiaryTheme" android:allowBackup="true">
        <activity
            android:name="adonai.diary_browser.AuthorizationForm"
            android:label="@string/title_activity_authorization_form" >
        </activity>
        <activity
            android:name="adonai.diary_browser.DiaryListActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_diary_list" android:configChanges="keyboard|keyboardHidden|orientation|screenSize" android:launchMode="singleTask">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="*diary.ru"/>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name="adonai.diary_browser.UmailListActivity"
                  android:label="@string/umail_activity_title"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                  android:windowSoftInputMode="stateHidden"
                  android:launchMode="singleTask"/>
        <activity
            android:name="adonai.diary_browser.LaunchActivity"
            android:label="@string/title_activity_launch" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="adonai.diary_browser.preferences.PreferencesScreen"/>
        <service android:name="adonai.diary_browser.NetworkService" android:enabled="true">
        </service>
        
    </application>

</manifest>