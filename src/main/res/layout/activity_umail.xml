    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slider">

    <fragment
        android:name="adonai.diary_browser.MessageSenderFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/message_pane"
        tools:layout="@layout/fragment_message_sender" />

    <fragment
        android:name="adonai.diary_browser.UmailListFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/main_pane"
        tools:layout="@layout/fragment_umail" />

</adonai.diary_browser.DiarySlidePane>